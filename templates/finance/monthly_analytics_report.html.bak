{% extends "admin/base.html" %}
{% load static %}
{% block extrahead %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<style>
    .analytics-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .metric-card {
        padding: 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
        animation: fadeIn 0.8s ease-out forwards;
    }

    .metric-card i {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        display: block;
        transition: transform 0.3s ease;
    }

    .metric-card:hover i {
        transform: scale(1.2) rotate(10deg);
    }

    .metric-value {
        font-size: 2.5rem;
        font-weight: 900;
        margin-bottom: 0.5rem;
        font-family: 'Inter', sans-serif;
    }

    .metric-label {
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.85rem;
        font-weight: 700;
    }

    .chart-box {
        height: 300px;
        margin-top: 2rem;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .recommendation-item {
        background: rgba(212, 175, 55, 0.05);
        border: 1px solid var(--glass-border);
        border-right: 4px solid var(--gold-primary);
        padding: 1.5rem;
        border-radius: 12px;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 1.5rem;
        transition: all 0.3s ease;
    }

    .recommendation-item:hover {
        background: rgba(212, 175, 55, 1.0);
        transform: translateX(10px);
    }

    .rec-icon {
        width: 40px;
        height: 40px;
        background: var(--gold-soft);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--gold-primary);
        flex-shrink: 0;
    }

    .profit-good {
        border-color: #4CAF50 !important;
    }

    .profit-bad {
        border-color: #ff4b2b !important;
    }

    .revenue-text {
        color: #4CAF50;
    }

    .expense-text {
        color: #ff4b2b;
    }

    .stone-text {
        color: #b388ff;
    }

    .gold-text {
        color: var(--gold-primary);
    }

    .unit-small {
        font-size: 1rem;
    }

    .tahyif-info {
        margin-top: 10px;
        font-weight: 700;
        color: var(--gold-primary);
    }

    .grid-2col {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }

    .chart-label-ltr {
        direction: ltr;
        text-align: center;
    }

    .card-spacing {
        margin-top: 30px;
        border: 2px solid var(--gold-primary);
    }
</style>
{% endblock %}

{% block content %}
<div class="dashboard-container">
    <div class="dashboard-header">
        <h1 class="dashboard-title">
            <i class="fa-solid fa-chart-line"></i> {{ title }}
        </h1>
        <form method="get" class="header-actions"
            style="display: flex; gap: 10px; align-items: center; flex-wrap: wrap;">
            <div class="select-wrapper" style="display: flex; gap: 5px; align-items: center;">
                <label style="font-size: 0.8rem; color: var(--gold-primary);">نوع التقرير:</label>
                <select name="report_type" class="form-control"
                    style="width: auto; background: var(--bg-card); color: #fff;">
                    <option value="monthly" {% if report_type=='monthly' %}selected{% endif %}>شهري</option>
                    <option value="quarterly" {% if report_type=='quarterly' %}selected{% endif %}>ربع سنوي</option>
                    <option value="semi_annual" {% if report_type=='semi_annual' %}selected{% endif %}>نصف سنوي</option>
                    <option value="annual" {% if report_type=='annual' %}selected{% endif %}>سنوي</option>
                </select>
            </div>

            <div class="select-wrapper" style="display: flex; gap: 5px; align-items: center;">
                <label style="font-size: 0.8rem; color: var(--gold-primary);">الشهر:</label>
                <select name="month" class="form-control" style="width: auto; background: var(--bg-card); color: #fff;">
                    {% for m in month_choices %}
                    <option value="{{ m.value }}" {% if month==m.value %}selected{% endif %}>{{ m.label }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="select-wrapper" style="display: flex; gap: 5px; align-items: center;">
                <label style="font-size: 0.8rem; color: var(--gold-primary);">السنة:</label>
                <select name="year" class="form-control" style="width: auto; background: var(--bg-card); color: #fff;">
                    {% for y in year_choices %}
                    <option value="{{ y }}" {% if year==y %}selected{% endif %}>{{ y }}</option>
                    {% endfor %}
                </select>
            </div>

            <button type="submit" class="btn-new-order">
                <i class="fa-solid fa-filter"></i> تحديث التقرير
            </button>
            <button type="button" onclick="window.print()" class="btn-new-order"
                style="background: rgba(255,255,255,0.1); border: 1px solid var(--glass-border);">
                <i class="fa-solid fa-print"></i> طباعة
            </button>
        </form>
    </div>

    <div class="analytics-grid">
        <!-- Revenue Card -->
        <div class="glass-card metric-card">
            <i class="fa-solid fa-money-bill-trend-up revenue-text"></i>
            <div class="metric-value revenue-text">{{ total_revenue|floatformat:2 }}</div>
            <div class="metric-label">إجمالي الإيرادات</div>
            <div class="chart-box">
                <canvas id="revenueChart"></canvas>
            </div>
        </div>

        <!-- Expense Card -->
        <div class="glass-card metric-card">
            <i class="fa-solid fa-money-bill-transfer expense-text"></i>
            <div class="metric-value expense-text">{{ total_expenses|floatformat:2 }}</div>
            <div class="metric-label">إجمالي المصروفات</div>
            <div class="chart-box">
                <canvas id="expenseChart"></canvas>
            </div>
        </div>

        <!-- Stones/Tahyif Card -->
        <div class="glass-card metric-card">
            <i class="fa-solid fa-gem stone-text"></i>
            <div class="metric-value stone-text">{{ total_stones_weight|floatformat:2 }} <span
                    class="unit-small">جم</span></div>
            <p class="tahyif-info">
                يعادل: {{ total_tahyif_gold|floatformat:2 }} جم ذهب (تحييف)
            </p>
            <div class="metric-label">إجمالي وزن الفصوص</div>
            <div class="chart-box">
                <canvas id="stoneChart"></canvas>
            </div>
        </div>

        <!-- Net Profit Card -->
        <div class="glass-card metric-card {% if is_profit %}profit-good{% else %}profit-bad{% endif %}">
            <i class="fa-solid fa-scale-balanced gold-text"></i>
            <div class="metric-value gold-text">{{ net_profit|floatformat:2 }}</div>
            <div class="metric-label">صافي الربح / الخسارة</div>
            <div class="chart-box">
                <canvas id="profitChart"></canvas>
            </div>
        </div>
    </div>

    <div class="grid-2col">
        <div class="glass-card">
            <h3 class="chart-header"><i class="fa-solid fa-handshake"></i> توزيع أرباح الشركاء</h3>
            <div class="table-responsive">
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th>الشريك</th>
                            <th>النسبة (%)</th>
                            <th>حصة الربح (ج.م)</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for share in partner_shares %}
                        <tr>
                            <td><b>{{ share.partner.name }}</b></td>
                            <td class="text-center">{{ share.partner.percentage }}%</td>
                            <td class="text-center text-green"><b>{{ share.share|floatformat:2 }}</b></td>
                        </tr>
                        {% empty %}
                        <tr>
                            <td colspan="3" class="text-center">لا يوجد شركاء مسجلين</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="glass-card">
            <h3 class="chart-header"><i class="fa-solid fa-stopwatch"></i> كفاءة التشغيل (متوسط الوقت)</h3>
            <div class="table-responsive">
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th>المرحلة (Process)</th>
                            <th>عدد العمليات</th>
                            <th>متوسط الوقت</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for stat in efficiency_data %}
                        <tr>
                            <td>{{ stat.stage }}</td>
                            <td class="text-center">{{ stat.count }}</td>
                            <td class="chart-label-ltr">{{ stat.avg_duration }}</td>
                        </tr>
                        {% empty %}
                        <tr>
                            <td colspan="3" class="text-center">لا توجد بيانات تشغيل لهذا الشهر</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="glass-card card-spacing"
        style="border: 2px solid var(--gold-primary); background: rgba(212, 175, 55, 0.02);">
        <h3 class="chart-header gold-text"><i class="fa-solid fa-wand-magic-sparkles"></i> رؤية الذكاء الاصطناعي وخطة
            الإنتاج (AI Production Plan)
        </h3>
        <div style="padding: 20px;">
            <div class="grid-2col" style="grid-template-columns: 1fr 1.5fr;">
                <!-- Recommendations Column -->
                <div>
                    <h4 style="margin-bottom: 15px;"><i class="fa-solid fa-lightbulb"
                            style="color: var(--gold-bright);"></i> توجيهات استراتيجية:</h4>
                    {% if recommendations %}
                    <div style="display: flex; flex-direction: column; gap: 10px;">
                        {% for rec in recommendations %}
                        <div class="recommendation-item" style="border-right-width: 4px; padding: 1rem;">
                            <div class="rec-icon" style="width: 30px; height: 30px;"><i class="fa-solid fa-check"
                                    style="font-size: 0.8rem;"></i></div>
                            <div style="font-size: 0.95rem; font-weight: 600;">{{ rec }}</div>
                        </div>
                        {% endfor %}
                    </div>
                    {% else %}
                    <p class="text-muted">لا توجد توصيات متاحة حالياً.</p>
                    {% endif %}
                </div>

                <!-- Production Plan Column -->
                <div>
                    <h4 style="margin-bottom: 15px;"><i class="fa-solid fa-calendar-check" style="color: #4CAF50;"></i>
                        خطة الإنتاج المقترحة {{ production_plan.0.period|default:"" }}:</h4>
                    <div class="table-responsive">
                        <table class="custom-table"
                            style="background: rgba(255,255,255,0.03); border-radius: 12px; overflow: hidden;">
                            <thead style="background: rgba(212, 175, 55, 0.1);">
                                <tr>
                                    <th>الصنف المستهدف</th>
                                    <th>الإنتاج السابق</th>
                                    <th style="color: var(--gold-bright);">الإنتاج المطلوب</th>
                                    <th style="color: #4CAF50;">الربح المتوقع (ج.م)</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for plan in production_plan %}
                                <tr>
                                    <td><b>{{ plan.item }}</b></td>
                                    <td class="text-center">{{ plan.current_count }}</td>
                                    <td class="text-center"
                                        style="font-weight: 800; font-size: 1.1rem; color: var(--gold-bright);">{{
                                        plan.target_count }}</td>
                                    <td class="text-center text-green"><b>{{ plan.expected_profit|floatformat:2 }}</b>
                                    </td>
                                </tr>
                                {% empty %}
                                <tr>
                                    <td colspan="4" class="text-center">يرجى إدخال بيانات مبيعات كافية لتوليد الخطة.
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            {% if top_products %}
            <div style="margin-top: 30px; padding-top: 20px; border-top: 1px dashed var(--glass-border);">
                <h4 style="margin-bottom: 15px;"><i class="fa-solid fa-trophy" style="color: var(--gold-primary);"></i>
                    تحليل الربحية حسب الصنف (الأكثر تأثيراً):</h4>
                <div class="table-responsive">
                    <table class="custom-table" style="font-size: 0.9em;">
                        <thead>
                            <tr>
                                <th>الصنف / الموديل</th>
                                <th>عدد القطع المباعة</th>
                                <th>إجمالي الربح المحقق</th>
                                <th>متوسط ربح القطعة</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in top_products %}
                            <tr>
                                <td>{{ item.0 }}</td>
                                <td class="text-center">{{ item.1.count }}</td>
                                <td class="text-center text-green"><b>{{ item.1.total_profit|floatformat:2 }}</b></td>
                                <td class="text-center">{{
                                    item.1.total_profit|divide:item.1.count|floatformat:2|default:"0.00" }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
    // Chart.js Configuration
    const chartOptions = {
        responsive: true,
        maintainAspectRatio: false,
        plugins: { legend: { display: false } },
        scales: {
            x: { display: false },
            y: { display: false }
        },
        elements: {
            line: { tension: 0.4 },
            point: { radius: 0 }
        }
    };

    new Chart(document.getElementById('revenueChart'), {
        type: 'line',
        data: {
            labels: ['1', '2', '3', '4', '5'],
            datasets: [{
                data: [0, Number("{{ total_revenue|default:0 }}") * 0.4, Number("{{ total_revenue|default:0 }}") * 0.7, Number("{{ total_revenue|default:0 }}") * 0.9, Number("{{ total_revenue|default:0 }}")],
                borderColor: '#4CAF50',
                fill: true,
                backgroundColor: 'rgba(76, 175, 80, 0.1)'
            }]
        },
        options: chartOptions
    });

    new Chart(document.getElementById('expenseChart'), {
        type: 'line',
        data: {
            labels: ['1', '2', '3', '4', '5'],
            datasets: [{
                data: [0, Number("{{ total_expenses|default:0 }}") * 0.5, Number("{{ total_expenses|default:0 }}") * 0.8, Number("{{ total_expenses|default:0 }}") * 0.6, Number("{{ total_expenses|default:0 }}")],
                borderColor: '#ff4b2b',
                fill: true,
                backgroundColor: 'rgba(255, 75, 43, 0.1)'
            }]
        },
        options: chartOptions
    });

    new Chart(document.getElementById('stoneChart'), {
        type: 'line',
        data: {
            labels: ['1', '2', '3', '4', '5'],
            datasets: [{
                data: [0, Number("{{ total_stones_weight|default:0 }}") * 0.3, Number("{{ total_stones_weight|default:0 }}") * 0.6, Number("{{ total_stones_weight|default:0 }}") * 0.8, Number("{{ total_stones_weight|default:0 }}")],
                borderColor: '#b388ff',
                fill: true,
                backgroundColor: 'rgba(179, 136, 255, 0.1)'
            }]
        },
        options: chartOptions
    });

    new Chart(document.getElementById('profitChart'), {
        type: 'line',
        data: {
            labels: ['1', '2', '3', '4', '5'],
            datasets: [{
                data: [0, Number("{{ net_profit|default:0 }}") * 0.3, Number("{{ net_profit|default:0 }}") * 0.8, Number("{{ net_profit|default:0 }}") * 0.5, Number("{{ net_profit|default:0 }}")],
                borderColor: '#D4AF37',
                fill: true,
                backgroundColor: 'rgba(212, 175, 55, 0.1)'
            }]
        },
        options: chartOptions
    });
</script>

<style>
    @media print {

        .dashboard-header form,
        .btn-new-order {
            display: none !important;
        }

        .glass-card {
            box-shadow: none;
            border: 1px solid #ccc;
            break-inside: avoid;
        }

        .dashboard-container {
            padding: 0;
        }

        body {
            background: white;
            color: black;
        }

        * {
            -webkit-print-color-adjust: exact !important;
            print-color-adjust: exact !important;
        }
    }
</style>
{% endblock %}